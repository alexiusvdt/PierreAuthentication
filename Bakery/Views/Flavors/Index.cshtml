@{
  Layout = "_Layout";
}

@using Factory.Models


@if (@Model.Count == 0)
{
  <h3>Zut alors, no flavors have been added yet!</h3>
} 

<ul class="list-group">
@foreach (Flavor flavor in Model)
{
  <li class="list-group-item">@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
}
</ul>
