@{
  Layout = "_Layout";
}

@using Bakery.Models

<div class="treats">
@if (@Model.Count == 0)
{
  <h3>No treats have been added yet!</h3>
} 
else
{
  <ul class="list-group">
    @foreach (Treat treat in Model)
    {
      <li class="list-group-item">@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
    }
  </ul>
}
<br>
</div>